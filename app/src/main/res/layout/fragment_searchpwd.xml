<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SearchIDFragment">

    <EditText
        android:id="@+id/phone_num_ET"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="휴대전화 번호 입력"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="number"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/veri_ET"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/pretendard_regular"
        android:hint="인증번호 입력"
        android:inputType="number"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_num_ET" />

    <Button
        android:id="@+id/veri_send_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/background_search_button"
        android:text="인증번호 전송"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/phone_num_ET"
        app:layout_constraintTop_toTopOf="@+id/phone_num_ET" />

    <Button
        android:id="@+id/enter_Btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/background_search_button"
        android:text="확인"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/veri_ET"
        app:layout_constraintTop_toTopOf="@+id/veri_ET" />

    <Button
        android:id="@+id/saerch_id_Btn"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:background="@drawable/btn_select"
        android:fontFamily="@font/pretendard_regular"
        android:text="비밀번호 찾기"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="67dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>