<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".SplashInit">

    <ImageView
        android:id="@+id/logo_img_IV"
        android:layout_width="222dp"
        android:layout_height="242dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/img_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_txt_IV"
        android:layout_width="310dp"
        android:layout_height="87dp"
        android:layout_marginTop="302dp"
        android:src="@drawable/icon_main_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:background="@drawable/btn_select"
        android:fontFamily="@font/pretendard_regular"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/join_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/join_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="회원가입하고 시작하기"
        android:textColor="@color/inactive_btn"
        android:textSize="17sp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_btn"
        app:layout_constraintStart_toStartOf="@+id/login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>